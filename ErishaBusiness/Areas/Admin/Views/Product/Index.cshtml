@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-info" href="/admin/product/edit/0" style="padding: 10px; line-height: 9px;float:right;" title="Add Product">
                        <i class="mdi mdi-credit-card-plus mx-0" style="margin-right: 5px !important; float: left;"></i> Add Product
                    </a>
                </div>
            </div>
            <div class="table-responsive pt-3">

                <table id="ProductTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Category Name
                            </th>
                            <th>
                                SKU Id
                            </th>
                            <th>
                                Product Image
                            </th>
                            <th>
                                Active
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/admin/pagesscript/product/index.js" asp-append-version="true"></script>