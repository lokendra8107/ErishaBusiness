@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model ErishaBusiness.Data.DTOS.CategoryDto;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Category</h4>
            <form id="CategoryForm" class="form-sample" method="post" enctype="multipart/form-data" asp-controller="Category" asp-action="SaveCategoryData">
                <div class="row">
                    <input type="hidden" asp-for="Id"/> 
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category Name</label>
                            <div class="col-sm-9 inputfieldValidateItem">
                                <input type="text" class="form-control inputfieldValidate" asp-for="CategoryName" />
                                <span class="reuiredValidateMessage">*Category Name is required</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category Type</label>
                            <div class="col-sm-9 inputfieldValidateItem">
                                <input type="text" class="form-control inputfieldValidate" asp-for="CategoryType" />
                                <span class="reuiredValidateMessage">*Category Type is required</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Category Image</label>
                            <input type="file" name="ImageUpload" id="ImageUpload" onchange="ShowPreview(this)" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <img id="categoryPreviewImage" style="width:150px" src="@(Model.ImagePath)" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" asp-for="IsActive">
                                IsActive
                                <i class="input-helper"></i>
                            </label>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary me-2 saveCategorybtn" onclick="SaveCategoryData()">Submit</button>
                <a class="btn btn-light" href="/admin/category">Cancel</a>
            </form>
        </div>
    </div>
</div>
<script src="~/admin/pagesscript/category/addedit.js" asp-append-version="true"></script>